<h1>admin/users/edit</h1>
<%= form_with model: @user, url: admin_users_update_path(@user.id) do |f| %>
  <%# <%= render "public/shared/error_messages", resource: resource %> 

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <td>会員ステータス</td>
  <td>
    <div class="form-check form-check-inline">
    <%= f.radio_button :is_active, true, class: "form-check-input" %>
    <%= f.label :is_active, "有効", class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline">
    <%= f.radio_button :is_active, false, class: "form-check-input" %>
    <%= f.label :is_active, "退会", class: "form-check-label" %>
    </div>
  </td>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>