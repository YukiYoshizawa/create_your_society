<% if society.favorited_by?(current_user) %>
  <%= link_to society_favorites_path(society), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= society.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to society_favorites_path(society), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= society.favorites.count %> いいね
  <% end %>
<% end %>